{
      "type": "page",
      "name": "EmployeePage",
      "title": "Employ Details page",
      "components": [
            {
                  "type": "resource",
                  "name": "Empdept",
                  "binding": "rest",
                  "resource": "virtualDomains.empdept"
            },
            {
                  "type": "resource",
                  "name": "Dept",
                  "binding": "rest",
                  "resource": "virtualDomains.department"
            },
            {
                  "type": "form",
                  "name": "SelectDepartment",
                  "label": "Search a Department  {{$locale}}",
                  "components": [
                        {
                              "type": "select",
                              "name": "SelectDept",
                              "label": "Department",
                              "sourceModel": "Dept",
                              "labelKey": "DNAME",
                              "valueKey": "DEPTNO",
                              "sourceParameters": {},
                              "sourceValue": [],
                              "required": false,
                              "value": ""
                        },
                        {
                              "type": "button",
                              "name": "ApplyDepartment",
                              "label": "Apply",
                              "onClick": "$EmployeeDetailsNGrid.$load()"
                        },
                        {
                              "type": "button",
                              "name": "ResetDepartment",
                              "label": "Show All Departments",
                              "onClick": "$EmployeeDetailsNGrid.$loadAll()"
                        }
                  ],
                  "nextButtonLabel": "Next",
                  "showInitially": true
            },
            {
                  "type": "form",
                  "name": "EditEmpList",
                  "label": "Edit Employees",
                  "components": [
                        {
                              "type": "grid",
                              "model": "Empdept",
                              "parameters": {
                                    "DEPTNO": "$SelectDept"
                              },
                              "name": "EmployeeDetailsNGrid",
                              "allowNew": true,
                              "allowModify": true,
                              "allowReload": true,
                              "allowDelete": true,
                              "pageSize": 8,
                              "components": [
                                    {
                                          "type": "display",
                                          "model": "id",
                                          "label": "Id",
                                          "loadInitially": true,
                                          "asHtml": false
                                    },
                                    {
                                          "name": "EMPNO",
                                          "type": "number",
                                          "label": "Employee Number",
                                          "model": "EMPNO",
                                          "parameters": {},
                                          "required": false,
                                          "loadInitially": true
                                    },
                                    {
                                          "type": "text",
                                          "model": "ENAME",
                                          "label": "Employee Name",
                                          "parameters": {},
                                          "required": false,
                                          "name": "ENAME"
                                    },
                                    {
                                          "type": "select",
                                          "model": "DEPTNO",
                                          "label": "Department Name",
                                          "sourceModel": "Dept",
                                          "labelKey": "DNAME",
                                          "valueKey": "DEPTNO",
                                          "sourceParameters": {},
                                          "sourceValue": [],
                                          "required": false,
                                          "name": "DEPTNO"
                                    },
                                    {
                                          "name": "SAL",
                                          "type": "number",
                                          "label": "Salary",
                                          "model": "SAL",
                                          "parameters": {},
                                          "required": false
                                    },
                                    {
                                          "name": "COMM",
                                          "type": "number",
                                          "label": "Commission",
                                          "model": "COMM",
                                          "parameters": {},
                                          "placeholder": "Enter",
                                          "required": false
                                    },
                                    {
                                          "name": "TOTAL",
                                          "type": "literal",
                                          "value": "{{item.SAL + item.COMM | number:2}}",
                                          "label": "Total Payment",
                                          "style": "text-align: right;"
                                    },
                                    {
                                          "type": "datetime",
                                          "model": "HIREDATE",
                                          "label": "Hire Date",
                                          "parameters": {},
                                          "required": false
                                    },
                                    {
                                          "name": "someCheckbox",
                                          "type": "boolean",
                                          "booleanTrueValue": "1",
                                          "booleanFalseValue": "0",
                                          "readonly": false,
                                          "onUpdate": "alert(\"I am an alert box!\")",
                                          "label": "Click me"
                                    }
                              ],
                              "onClick": "console.log(\"selected record: \"+currentSelection.id);",
                              "loadInitially": true
                        }
                  ],
                  "nextButtonLabel": "Next",
                  "showInitially": true
            },
            {
                  "name": "EmployeePage_child_5",
                  "type": "form",
                  "label": "Debugging",
                  "nextButtonLabel": "Next",
                  "showInitially": true,
                  "components": [
                        {
                              "name": "GridSelection",
                              "type": "literal",
                              "label": "GridSelection",
                              "value": "$EmployeeDetailsNGridDS.selectedRecords"
                        }
                  ]
            }
      ],
      "scriptingLanguage": "JavaScript"
}